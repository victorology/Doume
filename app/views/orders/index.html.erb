<div class="row">
	<div class="large-12 columns">
		<form id="order_form" class="custom" action="orders" method="POST" data-abide>
			<input name="authenticity_token" type="hidden" value="<%= form_authenticity_token %>" />
			<ul id="progressbar">
				<li class="active">시간</li>
				<li>연락처</li>
			</ul>
			</fieldset> -->
			<fieldset>
				<h2 class="form_title">시간</h2>
				<h3 class="form_subtitle">원하시는 날짜를 선택해주세요</h3>
				<input type="text" id="order_at" data-date-format="yyyy-mm-dd" name="order_at" />
				<h3 class="form_subtitle">원하시는 서비스를 선택해주세요</h3>
				<div class="row">
			    <div class="large-12 columns">
			      <label for="service_type"><input name="service_type" type="radio" value="1" style="display:none;" CHECKED><span class="custom radio checked"></span><%= service_string(1) %></label>
			      <label for="service_type"><input name="service_type" type="radio" value="2" style="display:none;"><span class="custom radio"></span><%= service_string(2) %></label>
			      <label for="service_type"><input name="service_type" type="radio" value="3" style="display:none;"><span class="custom radio"></span><%= service_string(3) %></label>
			    </div>
		    </div>
				<input type="button" name="next" class="next action-button" value="다음" />
			</fieldset>
			<fieldset>
				<div class="row">
					<div class="large-6 columns title">
						도우미 방문 날짜
					</div>
					<div class="large-6 columns value">
						<div id="order_at"></div>
					</div>
				</div>
				<div class="row">
					<div class="large-6 columns title">
						서비스 종류
					</div>
					<div class="large-6 columns value">
						<div id="order_service_type"></div>
					</div>
				</div>
				<hr />
				<h2 class="form_title">연락처</h2>
				<div class="name-field">
					<label>이름</label>
					<input type="text" name="name" placeholder="홍길동" required />
					<small class="error">이름을 입력해주세요</small>
				</div>
				<div class="address-field">
					<label>주소</label>
					<input type="text" name="address" placeholder="서울 강남구 역삼동 683-34 4층" required />
					<small class="error">주소를 입력해주세요</small>
				</div>
				<div class="address-field">
					<label>전화번호</label>
					<input type="text" name="tel" placeholder="010-1234-5678" required />
					<small class="error">전화번호를 입력해주세요</small>
				</div>
				
				<input type="button" name="previous" class="previous action-button" value="이전" />
				<input type="submit" name="submit" class="next action-button" value="신청하기" />
			</fieldset>
			<div class="space"></div>
		</form>
	</div>
</div>