	<div class="large-12 columns">
		<form id="order_form" class="custom" action="orders" method="POST">
			<input name="authenticity_token" type="hidden" value="<%= form_authenticity_token %>" />
			<ul id="progressbar">
				<li class="active">시간</li>
				<li>연락처</li>
			</ul>
